<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}DealGames{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous" defer></script>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </head>
    <body class="position-relative">
        {% block nav %}
            <div class="h1_title_container">
                <h1 class="title"><a href="/"><img class="logo" src="{{ asset('img/gamecube.svg') }}" />DealGames</a></h1>

                <div class="search-bar">
                    <form class="d-flex " role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-dark" type="submit">Search</button>
                    </form>
                </div>
                <a href="/connexion" class="btn btn-dark connexion">Connexion</a>

            </div>
            <nav class="navbar navbar-expand-lg navi">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav navi">
                            <li class="nav-item Playstation">
                                <h4 class="PS_title">
                                    <a class="nav-link" href="/productList">Playstation</a>
                                </h4>
                            </li>
                            <h4 class="pipe"></h4>
                            <li class="nav-item Xbox">
                                <h4 class="Xbox_title">
                                    <a class="nav-link" href="/productList">Xbox</a>
                                </h4>
                            </li>
                            <h4 class="pipe"></h4>
                            <li class="nav-item PC">
                                <h4 class="PC_title">
                                    <a class="nav-link" href="/productList">PC</a>
                                </h4>
                            </li>
                            <h4 class="pipe"></h4>
                            <li class="nav-item Switch">
                                <h4 class="Switch_title">
                                    <a class="nav-link" href="/productList">Switch</a>
                                </h4>
                            </li>
                            <h4 class="pipe"></h4>
                            <li class="nav-item Accessoires">
                                <h4 class="Accessoire_title">
                                    <a class="nav-link" href="/productList">Accessoires</a>
                                </h4>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>



        {% endblock %}
        <div class="add_anounce bottom-0 end-0">
            <a href="/add_announce" class="btn btn-light add_anounce_btn">+</a>
        </div>
    {% block body %}

    {% endblock %}
    </body>
    <footer>
        {% block footer %}
            <div class="footer">
                <h1 class="footer_title"><a href="/"><img class="logo" src="{{ asset('img/gamecube.svg') }}" />DealGames</a></h1>

                <div class="footer_sections">
                    <div class="console_list">
                        <h3 class="footer_section_title">Nos Consoles</h3>
                        <ul class="console">
                            <li>
                                <a href="/product">PS5</a>
                            </li>
                            <li>
                                <a href="/product">PS4</a>
                            </li>
                            <li>
                                <a href="/product">Xbox Séries</a>
                            </li>
                            <li>
                                <a href="/product">Xbox One</a>
                            </li>
                            <li>
                                <a href="/product">Switch</a>
                            </li>
                        </ul>
                    </div>
                    <div class="client">
                        <h3>Service Clientelle</h3>
                        <ul class="ServiceClient">
                            <li>
                                <a href="/product">A Propos de Nous</a>
                            </li>
                            <li>
                                <a href="/product">Nous Contacter</a>
                            </li>
                            <li>
                                <a href="/product">CGU</a>
                            </li>
                            <li>
                                <a href="/product">CGV</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        {% endblock %}
    </footer>
</html>
